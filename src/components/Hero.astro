<script>
  import { gsap } from "gsap";
  import { TextPlugin } from "gsap/TextPlugin";

  gsap.registerPlugin(TextPlugin);
  const words = [
    "frontend engineer/>",
    "ui/ux designer/>",
    "dad joke guy/>",
    "design systems engineer/>",
    "aspiring barologist/>",
  ];
  let masterTl = gsap.timeline({ repeat: -1, ease: "power2.inOut" });
  words.forEach((word) => {
    let tl = gsap.timeline({ repeat: 1, yoyo: true, repeatDelay: 0.75 });
    tl.to("#text span", {
      duration: 1.5,
      text: word,
    });
    masterTl.add(tl);
  });
</script>
